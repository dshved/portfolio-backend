- var title = "Панель администрирования"
include common/_head
body
  <!--[if lt IE 7]>
  <p class="browsehappy">Вы используете <strong>устаревший</strong> браузер. Пожалуйста <a href="http://browsehappy.com/">обновите его</a></p>
  <![endif]-->
  .wrap
    header.header__admin
      .container
        
        .header__logout
          a.header__link(href="/") Вернуться на сайт / 
          a.header__link(href="/logout") Выйти
        .header__title Панель администрирования
    section.panel
      .container
        .tabs
          ul.tabs__controls
            li.tabs__controls-item.active
              a(href="#").tabs__control-link Обо мне
            li.tabs__controls-item
              a(href="#").tabs__control-link Блог
            li.tabs__controls-item
              a(href="#").tabs__control-link Мои работы
          ul.tabs__list
            li.tabs__item.active
              .tabs__title Страница "Обо мне"
              .skills__container
                ul.skills__list
                  li.skills__item
                    .skills__head Frontend
                    ul.item-list
                      li.item
                        .item-value Html
                          label.skills__label(for="html") %
                          input.skills__value#skill_html(type="text" name="html" value= data.html)
                      li.item
                        .item-value CSS
                          label.skills__label(for="css") %
                          input.skills__value#skill_css(type="text" name="css" value= data.css)
                      li.item
                        .item-value JavaScript
                          label.skills__label(for="js") %
                          input.skills__value#skill_js(type="text" name="js" value= data.js)
                  li.skills__item
                    .skills__head Workflow
                    ul.item-list
                      li.item
                        .item-value Git
                          label.skills__label(for="git") %
                          input.skills__value#skill_git(type="text" name="git" value= data.git)
                      li.item
                        .item-value Gulp
                          label.skills__label(for="gulp") %
                          input.skills__value#skill_gulp(type="text" name="gulp" value= data.gulp)
                      li.item
                        .item-value Bower
                          label.skills__label(for="bower") %
                          input.skills__value#skill_bower(type="text" name="bower" value= data.bower)
                  li.skills__item
                    .skills__head Backend
                    ul.item-list
                      li.item
                        .item-value PHP
                          label.skills__label(for="php") %
                          input.skills__value#skill_php(type="text" name="php" value= data.php)
                      li.item
                        .item-value mySQL
                          label.skills__label(for="mysql") %
                          input.skills__value#skill_mysql(type="text" name="mysql" value= data.mysql)
                      li.item
                        .item-value Node.js
                          label.skills__label(for="node") %
                          input.skills__value#skill_nodejs(type="text" name="node" value= data.nodejs)
                      li.item
                        .item-value Mongo.db
                          label.skills__label(for="mongo") %
                          input.skills__value#skill_mongodb(type="text" name="mongo" value= data.mongodb)
              a.btn__admin#save__skill(href="#") Сохранить
            li.tabs__item
              .tabs__title Страница "Блог"
              .tabs__desc Добавить запись
              form(action="#" method="post")
                input.blog__name#blog_name(type="text" placeholder="Название" name="name")
                input.blog__date#blog_date(type="text" placeholder="Дата" onfocus="(this.type='date')" name="date")
                textarea.blog__text#blog_text(name="text", placeholder='Ваше сообщение')
                input.btn__admin#add__article(type="submit" value="Добавить пост")
                //a.btn__admin#add__article(href="#") Добавить

            li.tabs__item
              .tabs__title Страница "Мои работы"
              .tabs__desc Добавить работу
              form(action="/admin/saveWork" method="post" enctype="multipart/form-data")
                input.works__name#work_name(type="text" placeholder="Название проекта" name="name")
                input.works__skill#work_skill(type="text" placeholder="Технологии" name="skill")
                input(type="file" name="file" id="images" class="inputfile")
                label(for="images") Загрузить картинку
                input.btn__admin#add__work(type="submit" value="Добавить работу")
                //a.btn__admin#add__work(href="#") Добавить

